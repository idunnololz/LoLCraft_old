<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MainActionBarStyle</item>
        <item name="android:actionBarStyle">@style/MainActionBarStyle</item>
    </style>

    <style name="MainActionBarStyle" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="CraftTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/CraftActionBarStyle</item>
        <item name="android:actionBarStyle">@style/CraftActionBarStyle</item>
        <item name="android:spinnerItemStyle">@style/LolCraftThemeSpinnerItem</item>
        <item name="android:seekBarStyle">@style/SeekBarLolCraftTheme</item>
    </style>

    <style name="CraftActionBarStyle" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|homeAsUp</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp</item>
        <item name="background">#00000000</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ChampionNameStyle">
        <item name="android:shadowDx">3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">20.0</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemPickerCheckboxStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="LolCraftThemeSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/LolCraftThemeTextAppearanceSpinnerItem</item>
    </style>

    <style name="LolCraftThemeTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="SeekBarLolCraftTheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/lolcrafttheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/lolcrafttheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/lolcrafttheme_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
    
	<style name="StatTitleStyle">
	    <item name="android:textSize">12sp</item>
    </style>
    
	<style name="StatValueStyle">
	    <item name="android:textSize">16sp</item>
    </style>
</resources>